<configuration>
    <include resource="org/springframework/boot/logging/logback/base.xml"/>

    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File Appender for P6Spy logs -->
    <appender name="P6SpyFileAppender" class="ch.qos.logback.core.FileAppender">
        <file>spy.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Logger configuration for P6Spy -->
    <logger name="com.p6spy" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="P6SpyFileAppender"/>
    </logger>
    <logger name="p6spy" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="P6SpyFileAppender"/>
    </logger>

    <!-- Root logger configuration -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="P6SpyFileAppender"/>
    </root>
</configuration>
